package com.ordrupapp.ordrup;

import java.util.ArrayList;

public class menu {
	public final int 	BEVERAGES = 0,
						APPETIZERS = 1,
						MAIN_COURSE = 2,
						DESSERT = 3;
	
	private ArrayList<menuItem> beverages, appetizers, mainCourse, dessert;
			
	public ArrayList<menuItem> getMenuItemList(int type){
		
		switch(type) {
			case 0:
				return beverages;
		case 1:
				return appetizers;
		case 2:
				return mainCourse;
		case 3:
				return dessert;
		default:
				break;
		}
		return null;
		
	}

}
